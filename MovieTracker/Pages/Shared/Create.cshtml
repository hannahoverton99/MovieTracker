@model MovieTracker.Classes.Films

<h2>Add a Movie</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" asp-for="MovieName" />
    </div>
    <div class="form-group">
        <label for="Genre">Genre</label>
        <input type="text" class="form-control" asp-for="MovieGenre" />
    </div>
    <div class="form-group">
        <label for="DateWatched">Date Watched</label>
        <input type="date" class="form-control" asp-for="DateWatched" />
    </div>
    <div class="form-group">
        <label for="Rating">Rating</label>
        <input type="number" class="form-control" asp-for="Rating" min="1" max="10" />
    </div>
    <div class="form-group">
        <label for="Review">Review</label>
        <textarea class="form-control" asp-for="Review"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

